                        <script>
                              const textbox = document.getElementById("shipping")

                              function doAlert() {
                                    var input = document.querySelector('#Check');
                                    input.addEventListener('change', function () {
                                          if (input.checked) {
                                                textbox.style.display = "none"
                                                axios.patch("/billingAddress", {}).then((e) => {

                                                })
                                          } else {
                                                textbox.style.display = "block"
                                                axios.patch("/shippingAddress", {}).then((e) => {

                                                })
                                          }
                                    });
                              }

                              doAlert();

                              const select = (id) => {
                                    axios.patch("/updateDefault", { id: id }).then((e) => {

                                          if (e.data.response) {
                                                const Toast = Swal.mixin({
                                                      toast: true,
                                                      position: 'top-end',
                                                      showConfirmButton: false,
                                                      timer: 50000,
                                                      timerProgressBar: true,
                                                      didOpen: (toast) => {
                                                            toast.addEventListener('mouseenter', Swal.stopTimer)
                                                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                                                      }
                                                })
                                                Toast.fire({
                                                      icon: 'success',
                                                      title: 'Delivery Address Updated!'
                                                })
                                                location.href = "/checkout"
                                                textbox.style.display = "none"
                                          }
                                    })

                              }
                              const selected = (id) => {
                                    axios.patch("/updateAdd", { id: id }).then((e) => {

                                          if (e.data.response) {
                                                const Toast = Swal.mixin({
                                                      toast: true,
                                                      position: 'top-end',
                                                      showConfirmButton: false,
                                                      timer: 50000,
                                                      timerProgressBar: true,
                                                      didOpen: (toast) => {
                                                            toast.addEventListener('mouseenter', Swal.stopTimer)
                                                            toast.addEventListener('mouseleave', Swal.resumeTimer)
                                                      }
                                                })

                                                Toast.fire({
                                                      icon: 'success',
                                                      title: 'Delivery Address Updated!'
                                                })
                                                location.href = "/checkout"
                                          }
                                    })
                              }

                              const editAddress = (id) => {

                                    axios.get("/editAddress", { params: { id: id } }).then((e) => {

                                          if (e.data.response) {
                                                console.log();
                                                document.getElementById("Firstname").value = e.data.Address[0].DeliveryAddress[0].Firstname;
                                                document.getElementById("Lastname").value = e.data.Address[0].DeliveryAddress[0].Lastname;
                                                document.getElementById("address").value = e.data.Address[0].DeliveryAddress[0].address;
                                                document.getElementById("city").value = e.data.Address[0].DeliveryAddress[0].city;
                                                document.getElementById("state").value = e.data.Address[0].DeliveryAddress[0].state;
                                                document.getElementById("pincode").value = e.data.Address[0].DeliveryAddress[0].pincode;
                                                document.getElementById("email").value = e.data.Address[0].DeliveryAddress[0].email;
                                                document.getElementById("phone").value = e.data.Address[0].DeliveryAddress[0].phone;
                                                document.getElementById("id").value = e.data.Address[0].DeliveryAddress[0]._id;
                                          }
                                    })
                              }


                        </script>