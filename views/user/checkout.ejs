<%- include ('layout/navbar.ejs') %>
      <section class="breadcrumb-option">
            <div class="container">
                  <div class="row">
                        <div class="col-lg-12">
                              <div class="breadcrumb__text">
                                    <h4>Shopping Cart</h4>
                                    <div class="breadcrumb__links">
                                          <a href="/">Home</a>
                                          <a href="/product">Shop</a>
                                          <span>Shopping Cart</span>
                                    </div>
                              </div>
                        </div>
                  </div>
            </div>
      </section>
      <section class="checkout spad">
            <div class="container">
                  <div class="checkout__form">

                        <div class="row">
                              <div class="col-lg-8 col-md-6">
                                    <div class="d-block">
                                          <h6 class="checkout__title">Billing Address</h6>

                                          <h3 class="fs-bold mt-3">
                                                <%= Address[0].Address.Firstname %>
                                                      <%= Address[0].Address.Lastname %>
                                          </h3>
                                          <span>
                                                <%= Address[0].Address.address %>,
                                          </span><br>
                                          <span>Country/State <%= Address[0].Address.city %>,
                                          </span><br>
                                          <span>
                                                <%= Address[0].Address.pincode %>,
                                          </span><br>
                                          <span>
                                                <%= Address[0].Email %>
                                          </span><br>
                                          <span>
                                                <%= Address[0].Phone %>
                                          </span>
                                    </div>

                                    <div class="mt-4 mb-3"><input type="checkbox" class="" id="Check">
                                          <label for="same-as">Same as
                                                billing</label>

                                          <span class="text-black ms-5" style="opacity:70%;"> <svg
                                                      xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                                      fill="currentColor" class="bi bi-vector-pen" viewBox="0 0 18 18">
                                                      <path fill-rule="evenodd"
                                                            d="M10.646.646a.5.5 0 0 1 .708 0l4 4a.5.5 0 0 1 0 .708l-1.902 1.902-.829 3.313a1.5 1.5 0 0 1-1.024 1.073L1.254 14.746 4.358 4.4A1.5 1.5 0 0 1 5.43 3.377l3.313-.828L10.646.646zm-1.8 2.908-3.173.793a.5.5 0 0 0-.358.342l-2.57 8.565 8.567-2.57a.5.5 0 0 0 .34-.357l.794-3.174-3.6-3.6z" />
                                                      <path fill-rule="evenodd"
                                                            d="M2.832 13.228 8 9a1 1 0 1 0-1-1l-4.228 5.168-.026.086.086-.026z" />
                                                </svg></span>
                                          <button type="button" class="btn btn-link" class="btn btn-primary"
                                                data-bs-toggle="modal" data-bs-target="#ChangeAddress">Select
                                                Delivery
                                                address</button>


                                    </div>
                                    <h6 class="checkout__title mt-5">Delivery Details</h6>
                                    <div id="shipping">
                                          <form action="/deliveryAddress" method="post">
                                                <div class="row mt-2">
                                                      <div class="col-lg-6">
                                                            <div class="checkout__input ">
                                                                  <p>Fist Name<span>*</span></p>
                                                                  <input type="text" name="Firstname" required>
                                                            </div>
                                                      </div>
                                                      <div class="col-lg-6">
                                                            <div class="checkout__input">
                                                                  <p>Last Name<span>*</span></p>
                                                                  <input type="text" name="Lastname" required>
                                                            </div>
                                                      </div>
                                                </div>
                                                <div class="checkout__input">
                                                      <p>Address<span>*</span></p>

                                                      <input type="text" name="address" required>
                                                </div>
                                                <div class="checkout__input">
                                                      <p>Town/City<span>*</span></p>
                                                      <input type="text" name="city" required>
                                                </div>
                                                <div class="checkout__input">
                                                      <p>Country/State<span>*</span></p>
                                                      <input type="text" name="state" required>
                                                </div>
                                                <div class="checkout__input">
                                                      <p>Postcode / ZIP<span>*</span></p>
                                                      <input type="text" name="pincode" required>
                                                </div>
                                                <div class="row">
                                                      <div class="col-lg-6">
                                                            <div class="checkout__input">
                                                                  <p>Email<span>*</span></p>
                                                                  <input type="text" name="email" required>
                                                            </div>
                                                      </div>
                                                      <div class="col-lg-6">
                                                            <div class="checkout__input">
                                                                  <p>Phone<span>*</span></p>
                                                                  <input type="text" name="phone" required>
                                                            </div>
                                                      </div>

                                                </div>
                                                <button type="submit" class="site-btn">Update</button>
                                          </form>
                                    </div>


                              </div>
                              <div class="col-lg-4 col-md-6">

                                    <div class="checkout__order">
                                          <h4 class="order__title">Your order</h4>
                                          <div class="checkout__order__products">Product <span>Total</span>
                                          </div>

                                          <ul class="checkout__total__products">
                                                <% for( let i=0; i < cartSaved.cart.length; i++ ) { %>


                                                      <li>
                                                            <%= cartSaved.cart[i].product.Product_title %>
                                                                  <span>₹
                                                                        <%= cartSaved.cart[i].total %>
                                                                  </span>
                                                      </li>
                                                      <!-- <li>02. German chocolate <span>$ 170.0</span></li>
                                                                  <li>03. Sweet autumn <span>$ 170.0</span></li>
                                                                  <li>04. Cluten free mini dozen <span>$ 110.0</span>
                                                                  </li> -->
                                                      <% } %>
                                          </ul>
                                          <ul class="checkout__total__all">
                                                <li>Subtotal <span>₹ <%= cartSaved.subtotal %></span></li>
                                                <li>Total <span>₹ <%= cartSaved.subtotal %></span></li>
                                          </ul>


                                          <div class="checkout__input__checkbox">
                                                <label for="payment">
                                                      Cash on delivery
                                                      <input type="checkbox" id="payment">
                                                      <span class="checkmark"></span>
                                                </label>
                                          </div>
                                          <div class="checkout__input__checkbox">
                                                <label for="paypal">
                                                      Paypal
                                                      <input type="checkbox" id="paypal">
                                                      <span class="checkmark"></span>
                                                </label>
                                          </div>
                                          <button type="submit" class="site-btn">PLACE ORDER</button>
                                    </div>
                              </div>
                        </div>

                  </div>
            </div>
      </section>
      <div class="modal fade" id="ChangeAddress" data-backdrop="static" data-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-body">
                  <div class="container-fluid">
                        <div class="row">
                              <div class="col-md-6 ml-auto">
                                    <div class="modal-dialog">
                                          <div class="modal-content">
                                                <div class="modal-header">
                                                      <h1 class="modal-title fs-5" id="staticBackdropLabel">Add Address
                                                      </h1>
                                                </div>

                                                <div class="modal-body">

                                                      <% for( let i=0; i < Address[0].DeliveryAddress.length; i++ ) { %>


                                                            <h3 class="fs-bold mt-4">
                                                                  <%= Address[0].DeliveryAddress[i].Firstname %>
                                                                        <%= Address[0].DeliveryAddress[i].Lastname %>
                                                            </h3>
                                                            <span>
                                                                  <%= Address[0].DeliveryAddress[i].address %>,
                                                            </span><br>
                                                            <span>
                                                                  <%= Address[0].DeliveryAddress[i].city %>,<%=
                                                                              Address[0].DeliveryAddress[i].state %>
                                                            </span><br>
                                                            <span>
                                                                  <%= Address[0].DeliveryAddress[i].pincode %>,
                                                            </span><br>
                                                            <span>
                                                                  <%= Address[0].DeliveryAddress[i].email %>
                                                            </span><br>
                                                            <span>
                                                                  <%= Address[0].DeliveryAddress[i].phone %>
                                                            </span>
                                                            <div class="flex justify-content-between  mt-3">
                                                                  <% if (Address[0].DeliveryAddress[i].Default) { %>
                                                                        <button class="btn btn-danger"
                                                                              onclick="selected(`<%= Address[0].DeliveryAddress[i]._id %>`)">selected</button>
                                                                        <% } else { %>
                                                                              <button class="btn btn-success"
                                                                                    data-bs-dismiss="modal"
                                                                                    onclick="select(`<%= Address[0].DeliveryAddress[i]._id %>`)">select</button>
                                                                              <% } %>

                                                                                    <div><i
                                                                                                class="bi bi-pencil-square"></i><button
                                                                                                type="button"
                                                                                                data-bs-toggle="modal"
                                                                                                data-bs-target="#staticBackdrop"
                                                                                                onclick="editAddress(`<%= Address[0].DeliveryAddress[i]._id %>`)"
                                                                                                class="btn btn-link mt-1  ">Edit</button>
                                                                                    </div>
                                                            </div>
                                                            <% } %>
                                                </div>
                                                <div class="modal-footer">
                                                      <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Close</button>

                                                </div>
                                          </div>


                                    </div>
                              </div>
                        </div>
                  </div>
            </div>
      </div>
      </div>
      <!-- Add address  -->
