<h1%- include ("navbar.ejs") %>

      <main class="main-wrapper ">
            <div class="title-wrapper">
                  <div class="row align-items-center">

                        <!-- end col -->
                        <div class="col-md-12">
                              <div class="breadcrumb-wrapper mt-2 mr-4">
                                    <nav aria-label="breadcrumb">
                                          <ol class="breadcrumb">
                                                <li class="breadcrumb-item">
                                                      <a href="/admin/">Dashboard</a>
                                                </li>
                                                <li class="breadcrumb-item active" aria-current="page">
                                                      Add-Product
                                                </li>
                                          </ol>
                                    </nav>
                              </div>
                        </div>
                        <!-- end col -->
                  </div>
                  <!-- end row -->
            </div>
            <section class="ms-5">
                  <div class="container-fluid mt-5  ">
                        <h1 class=" text-4xl font-black mb-5 ms-48">Add Products</h1>
                        <form action="#" method="post" enctype="multipart/form-data">
                              <div class="flex flex-row ">

                                    <div class="mr-10 w-5/12">
                                          <div class="mb-3 ">
                                                <h1 class="form-label">Name</h1>
                                                <input type="text" name="name" class="form-control" />
                                          </div>

                                          <div class="mb-3">
                                                <h1 class="form-label">Description</h1>
                                                <input type="text" name="description" class="form-control" />
                                          </div>
                                          <h1 class="form-label">Price </h1>
                                          <div class="mb-3 flex ">
                                                <div class="mr-2"> <label class="form-label">Retail </label>
                                                      <input type="text" name="Price" class="form-control"
                                                            placeholder="$" />
                                                </div>
                                                <div>
                                                      <label class="form-label">Offer</label>
                                                      <input type="text" name="Price" class="form-control"
                                                            placeholder="$" />
                                                </div>
                                          </div>
                                          <div class=" mb-3">
                                                <h1>Upload</h1>
                                                <input type="file" class="form-control" name="image">

                                          </div>

                                    </div>
                                    <div>
                                          <label class="form-label">Category</label>
                                          <label class=" ml-40">Color</label>
                                          <div class="mb-3 flex flex-row ">

                                                <div class="flex">

                                                      <select class="form-select w-40"
                                                            aria-label="Default select example">
                                                            <option selected>Select Category</option>
                                                            <option value="1">MEN</option>
                                                            <option value="2">WOMEN</option>
                                                            <option value="3">Accessories</option>
                                                      </select>
                                                      <a href="#"> <button type="submit"
                                                                  class="btn btn-primary bg-cyan-600 ml-2 mr-4">Add</button></a>
                                                </div>

                                                <div class="flex">

                                                      <select class="form-select w-40"
                                                            aria-label="Default select example">
                                                            <option selected>Select Color</option>
                                                            <option value="1">Black</option>
                                                            <option value="2">Blue</option>
                                                            <option value="3">white</option>
                                                      </select>
                                                      <a href="#"> <button type="submit"
                                                                  class="btn btn-primary bg-cyan-600 ml-2 w-">Add</button></a>
                                                </div>
                                          </div>

                                          <div class="mb-3">
                                                <label class="form-label">Size</label>
                                                <label class="form-label ml-48">Quantity</label>
                                                <div class="mb-3 flex flex-row ">
                                                      <div class="flex"> <select class="form-select w-40"
                                                                  aria-label="Default select example">
                                                                  <option selected>Select Size</option>
                                                                  <option value="1">S</option>
                                                                  <option value="2">M</option>
                                                                  <option value="3">L</option>
                                                            </select>
                                                            <a href="#"> <button type="submit"
                                                                        class="btn btn-primary bg-cyan-600 ml-2 w-">Add</button></a>
                                                      </div>
                                                      <input type="text" class="form-control ml-4 w-" name="image">

                                                </div>

                                          </div>
                                          <div class="mb-3">
                                                <h1 class="form-label">Details </h1>
                                                <div class="mt-3">
                                                      <div class="form-floating">
                                                            <textarea class="form-control"
                                                                  placeholder="Leave a comment here"
                                                                  id="floatingTextarea2"
                                                                  style="height: 100px"></textarea>
                                                            <label for="floatingTextarea2">Product Info</label>
                                                      </div>
                                                </div>
                                                <div class="mt-3">
                                                      <div class="form-floating">
                                                            <textarea class="form-control"
                                                                  placeholder="Leave a comment here"
                                                                  id="floatingTextarea2"
                                                                  style="height: 100px"></textarea>
                                                            <label for="floatingTextarea2">Material</label>
                                                      </div>
                                                </div>
                                          </div>
                                    </div>

                              </div>
                              <button type="submit" class="btn btn-primary bg-cyan-600 ">Submit</button>
                        </form>

                  </div>
            </section>
      </main>

      <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

